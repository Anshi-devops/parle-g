pipeline {
    agent any

    stages {
        stage('Hello') {
            steps {
                echo 'Hello World'
            }
        }
        stage('git clone') {
            steps {
                git 'https://github.com/Pritam-Khergade/student-ui.git'
            }
        }    
        stage('Docker install') {
            steps { 
                sh''' 
                sudo yum install docker -y
                sudo systemctl start docker 
                sudo systemctl enable docker
                '''            
            }
        }        
        stage('Docker build') {
            steps {
                sh'''
                sudo docker build -t student-ui .
                '''
            }      
        }     
   }     
}     
